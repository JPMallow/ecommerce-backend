<%= form_with(model: @product, local: true, html: { class: 'needs-validation', novalidate: '' }) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container mt-3">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, id: :product_name, class: 'form-control', placeholder: 'Name' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :price, class: 'form-label' %>
          <%= form.number_field :price, id: :product_price, class: 'form-control', placeholder: 'Price' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, id: :product_description, class: 'form-control', placeholder: 'Description' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :sub_category_id, 'Sub Category', class: 'form-label' %>
          <%= form.collection_select :sub_category_id, @sub_categories, :id, :name, { prompt: 'Select a Sub Category' }, { class: 'form-control' } %>
        </div>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-md-6">
        <div class="actions">
          <%= form.submit 'Create Product', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>