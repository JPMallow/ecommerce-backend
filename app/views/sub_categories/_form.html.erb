<%= form_with(model: @sub_category, local: true, html: { class: 'needs-validation', novalidate: '' }) do |form| %>
  <% if @sub_category.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@sub_category.errors.count, "error") %> prohibited this subcategory from being saved:</h2>

      <ul>
        <% @sub_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :category_id, 'Parent Category', class: 'form-label' %>
    <%#= p @categories.inspect %>
    <%= form.collection_select :category_id, @categories, :id, :name, { prompt: 'Select a Category' }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, id: :subcategory_name, class: 'form-control' %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>