<h1>Sub Categories</h1>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @sub_categories.each do |sub_category| %>
    <tr>
      <td><%= sub_category.name %></td>
      <td>
        <%= link_to 'Show', sub_category, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_sub_category_path(sub_category), class: 'btn btn-primary' %>
        <%= link_to 'Delete', sub_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Sub Category', new_sub_category_path, class: 'btn btn-success' %>